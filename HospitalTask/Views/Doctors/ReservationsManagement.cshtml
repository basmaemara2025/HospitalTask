@model List<HospitalTask.Models.Appointment>

<h2>All Reservations</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Doctor.FullName</td>
                <td>@item.Patient.FullName</td>
                <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                <td>@item.AppointmentDate.ToString("HH:mm")</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>
