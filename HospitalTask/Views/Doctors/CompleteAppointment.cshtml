@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // التاريخ: الأحد والثلاثاء فقط
            flatpickr("#myDate", {
                dateFormat: "Y-m-d",
                enable: [
                    function(date) {
                        return (date.getDay() === 0 || date.getDay() === 2);
                    }
                ]
            });

            // الوقت: من 8 لـ 10 صباحًا
            flatpickr("#myTime", {
                enableTime: true,
                noCalendar: true,       // يخليها اختيار وقت فقط
                dateFormat: "H:i",
                minTime: "08:00",
                maxTime: "10:00",
                minuteIncrement: 30     // نص ساعة نص ساعة
            });
        });
    </script>
}



